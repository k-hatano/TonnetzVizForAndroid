<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/webView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </WebView>

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/note_button_shelf_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/lightlightgray">


        <LinearLayout
            android:layout_height="@dimen/note_button_width"
            android:layout_width="match_parent"
            android:gravity="center">
        <Button
            android:id="@+id/button_w"
            android:layout_width="@dimen/note_button_width"
            android:layout_height="@dimen/note_button_width"
            android:text="@string/note_w" />

        <Button
            android:id="@+id/button_e"
            android:layout_width="@dimen/note_button_width"
            android:layout_height="@dimen/note_button_width"
            android:text="@string/note_e" />

        <View
            android:layout_width="@dimen/note_button_width"
            android:layout_height="@dimen/note_button_width">
        </View>

        <Button
            android:id="@+id/button_t"
            android:layout_width="@dimen/note_button_width"
            android:layout_height="@dimen/note_button_width"
            android:text="@string/note_t" />

        <Button
            android:id="@+id/button_y"
            android:layout_width="@dimen/note_button_width"
            android:layout_height="@dimen/note_button_width"
            android:text="@string/note_y" />

        <Button
            android:id="@+id/button_u"
            android:layout_width="@dimen/note_button_width"
            android:layout_height="@dimen/note_button_width"
            android:text="@string/note_u" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="@dimen/note_button_width"
            android:layout_width="match_parent"
            android:gravity="center">
            <Button
                android:id="@+id/button_a"
                android:layout_width="@dimen/note_button_width"
                android:layout_height="@dimen/note_button_width"
                android:text="@string/note_a" />

            <Button
                android:id="@+id/button_s"
                android:layout_width="@dimen/note_button_width"
                android:layout_height="@dimen/note_button_width"
                android:text="@string/note_s" />

            <Button
                android:id="@+id/button_d"
                android:layout_width="@dimen/note_button_width"
                android:layout_height="@dimen/note_button_width"
                android:text="@string/note_d" />

            <Button
                android:id="@+id/button_f"
                android:layout_width="@dimen/note_button_width"
                android:layout_height="@dimen/note_button_width"
                android:text="@string/note_f" />

            <Button
                android:id="@+id/button_g"
                android:layout_width="@dimen/note_button_width"
                android:layout_height="@dimen/note_button_width"
                android:text="@string/note_g" />

            <Button
                android:id="@+id/button_h"
                android:layout_width="@dimen/note_button_width"
                android:layout_height="@dimen/note_button_width"
                android:text="@string/note_h" />

            <Button
                android:id="@+id/button_j"
                android:layout_width="@dimen/note_button_width"
                android:layout_height="@dimen/note_button_width"
                android:text="@string/note_j" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>